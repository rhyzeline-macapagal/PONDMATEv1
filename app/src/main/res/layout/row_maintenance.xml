<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/maintenanceList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:descendantFocusability="afterDescendants"
    android:focusable="false"
    android:focusableInTouchMode="false"
    >

    <Button
        android:id="@+id/maintenanceType"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Select"
        android:textAlignment="textStart"
        android:textSize="14sp"
        android:padding="8dp"
        android:backgroundTint="#66D3D3D3"
        android:focusable="true"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="sans-serif-light"
        android:textColor="#000000"
        app:cornerRadius="10dp"
        android:drawableEnd="@drawable/ic_dropdown_arrow"/>

    <EditText
        android:id="@+id/maintenanceCost"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:layout_marginStart="5dp"
        android:focusableInTouchMode="false"
        android:fontFamily="sans-serif-light"
        android:hint="â‚±1,500"
        android:inputType="numberDecimal"
        android:paddingStart="8dp"
        android:textAlignment="textEnd"
        android:textColorHint="#000000"
        android:textSize="14sp"
        android:background="@drawable/rounded_edittext"
        android:layout_marginBottom="8dp"
        android:padding="12dp"/>

    <ImageButton
        android:id="@+id/removeMaintenanceButton"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Remove"
        android:padding="8dp"
        android:layout_marginTop="7dp"
        android:src="@android:drawable/ic_menu_delete" />
</LinearLayout>
