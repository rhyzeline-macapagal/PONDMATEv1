<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Profile CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- LinearLayout for organizing profile details -->
        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <!-- Profile Image -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgProfilePhoto"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:scaleType="centerCrop"
                android:contentDescription="Profile Image"
                android:src="@drawable/ic_account_profile"
                app:shapeAppearanceOverlay="@style/CircularImageView" />


            <!-- Change Photo Button -->
            <Button
                android:id="@+id/btnChangePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add/Change Photo"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"/>

            <!-- Name Label and Value -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textSize="16sp"
                    android:textColor="#777777"
                    android:layout_gravity="start"/>

                <TextView
                    android:id="@+id/txtFullNameValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:layout_gravity="end"/>
            </LinearLayout>

            <!-- Address Label and Value -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="6dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtAddressLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address:"
                    android:textSize="16sp"
                    android:textColor="#777777"
                    android:layout_gravity="start"/>

                <TextView
                    android:id="@+id/txtAddressValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="123 Main Street, City"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:layout_gravity="end"/>
            </LinearLayout>

            <!-- Position Label and Value -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtPositionLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Position:"
                    android:textSize="16sp"
                    android:textColor="#777777"
                    android:layout_gravity="start"/>

                <TextView
                    android:id="@+id/txtPositionValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Owner"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:layout_gravity="end"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF0000"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardViewProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
