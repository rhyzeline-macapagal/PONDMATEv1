<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fraghome"
    android:textColor="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BREEDING"
            android:textSize="26sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#023e8a"
            android:layout_marginBottom="16dp" />

        <!-- Pond Overview Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_container"
            android:elevation="4dp"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="8dp"
            android:clipToPadding="false"
            android:backgroundTintMode="src_in">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fish Breed"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginBottom="12dp" />

            <!-- Dropdown Button (disabled initially) -->
            <Button
                android:id="@+id/btn_select_breed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Fish Breed"
                android:background="@drawable/rounded_box"
                android:padding="8dp"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"
                android:drawableEnd="@drawable/ic_dropdown_arrow"
                android:gravity="start|center_vertical"
                android:enabled="false" />

            <!-- Activity Started Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity Started "
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp" />

            <!-- Horizontal layout for radio buttons and date picker -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/txt_soa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mm/dd/yyyy"
                    android:textSize="20dp"
                    android:background="@drawable/rounded_box"
                    android:padding="6dp"
                    android:textColor="#000000"
                    android:enabled="false" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn_select_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Date"
                    android:background="@drawable/rounded_box"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:enabled="false" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harvest Date"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/harvestdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 months after the start of Activity"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_edit_fbreed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:background="@drawable/rounded_button"
                android:textColor="#ffffff" />
        </LinearLayout>

        <!-- Production Cost Summary -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_container"
            android:elevation="4dp"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mortality Rate"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp" />

            <!-- Formula Image -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/formula"
                android:contentDescription="Mortality Rate Formula"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Initial Stock -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Initial Stock:"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/txt_initial_stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="—"
                android:background="@drawable/rounded_box"
                android:padding="8dp"
                android:textColor="#000000"
                android:layout_marginBottom="12dp"
                android:enabled="false"
                android:inputType="number"/>

            <!-- Estimated No. of Dead Fish -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Est. No. of Dead Fish:"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp" />
                <EditText
                android:id="@+id/txt_est_dead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="—"

                android:background="@drawable/rounded_box"
                android:padding="8dp"
                android:textColor="#000000"
                android:layout_marginBottom="12dp"
                android:enabled="false"
                    android:inputType="number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mortality Rate:"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/txt_mortality_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="—"
                android:background="@drawable/rounded_box"
                android:padding="8dp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp"
                android:enabled="false" />

            <Button
                android:id="@+id/btn_edit_mort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"

                android:background="@drawable/rounded_button"
                android:backgroundTint="#023e8a"
                android:textColor="#ffffff" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
